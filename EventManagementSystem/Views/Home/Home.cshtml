@model IEnumerable<EventManagementSystem.Models.Event>

@{
	ViewData["Title"] = "Home";
	Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Event Management</title>
	<link rel="stylesheet" href="styles.css">
	<style>
		/* Event section styling */
		.events {
			padding: 50px 10%;
			text-align: center;
		}

		.event-cards {
			display: flex;
			justify-content: space-between;
			flex-wrap: wrap;
			gap: 20px;
			margin-top: 30px;
		}

		.event-card {
			width: 30%;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			border-radius: 8px;
			overflow: hidden;
		}

		.event-image {
			width: 100%;
			height: 300px;
			object-fit: cover;
		}

		.event-details {
			padding: 20px;
		}

			.event-details h3 {
				font-size: 1.5rem;
			}

			.event-details p {
				font-size: 1rem;
				color: #555;
			}

		.btn-secondary {
			padding: 10px 15px;
			background: #28a745;
			color: white;
			border: none;
			cursor: pointer;
			border-radius: 5px;
			transition: background 0.3s ease;
		}

			.btn-secondary:hover {
				background: #218838;
			}

		.card-equal-height {
			display: flex;
			flex-direction: column;
			height: 100%;
		}

		.card-body {
			flex-grow: 1;
		}

		.card {
			max-width: 100%;
			height: 100%;
		}

		.col {
			display: flex;
			flex-direction: column;
			align-items: stretch;
		}

		img.card-img-top {
			object-fit: cover;
			max-height: 200px;
			width: 100%;
		}

		.card img {
			width: 100%;
			height: 200px;
			object-fit: cover;
		}

	</style>
</head>
<body>
	<main>
		<section class="events">
			<h2>Events we provide</h2>
			<div class="album py-5 bg-body-tertiary">
				<div class="container">
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
						@foreach (var eve in Model)
						{
							if (eve.EventType == "Others")
							{
								<div class="col">
									<div class="card shadow-sm card-equal-height">
										<img class="bd-placeholder-img card-img-top" src="@eve.ImageURL" alt="Event Image">
										<div class="card-body">
											<h3 class="card-text">@eve.Name</h3>
											<p>Location: @eve.Location</p>
											<div class="btn-group">
												<a type="button" class="btn btn-sm btn-outline-secondary"
												   asp-controller="Home" asp-action="ContactUs" asp-route-id="#">Contact Us</a>
											</div>
										</div>
									</div>
								</div>
							}
						}
					</div>
				</div>
			</div>
		</section>
		<section class="events">
			<h2>Upcoming concerts</h2>
			<div class="album py-5 bg-body-tertiary">
				<div class="container">
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
						@{
							int count = 0;
						}
						@foreach (var eve in Model)
						{
							if (eve.EventType != "Others" && count < 3)
							{
								<div class="col">
									<div class="card shadow-sm">
										<img class="bd-placeholder-img card-img-top" src="@eve.ImageURL">
										<div class="card-body">
											<h3 class="card-text">@eve.Name</h3>
											<p>Location: @eve.Location</p>
											<p>Date: @eve.Date</p>
											<div class="btn-group">
												<a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Booking" asp-action="AddBooking" asp-route-eventName="@eve.Name">Book Now</a>
											</div>
										</div>
									</div>
								</div>
								count++;
							}
						}
					</div>
					@* @if (Model.Count(e => e.EventType != "Others") > 3) *@
					@* { *@
					@* 	<div class="row mt-4"> *@
					@* 		<div class="col text-center"> *@
					@* 			<a href="@Url.Action("ListEvents", "EventController")" class="btn btn-primary">View More</a> *@
					@* 		</div> *@
					@* 	</div> *@
					@* } *@
				</div>
			</div>
		</section>
	</main>

</body>
</html>
