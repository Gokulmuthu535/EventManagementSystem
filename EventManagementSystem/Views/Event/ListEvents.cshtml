@model IEnumerable<EventManagementSystem.Models.Event>

@{
	ViewData["Title"] = "ListEvents";
	Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<a asp-action="AdminHomePage" class="btn btn-secondary">
	<i class="fa fa-arrow-left"></i> Back to Admin Page
</a>

<a asp-action="AddEvent" class="btn btn-primary float-right">
	<i class="fa fa-plus"></i> Add new event
</a>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Date)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Location)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				Image
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Date)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Location)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<img style="width: 100px; height: 100px" src="@Html.DisplayFor(modelItem => item.ImageURL)" />
				</td>
			</tr>
			<tr>
				<td colspan="5" class="text-center">
					@Html.ActionLink("Edit", "UpdateEvent", new { id = item.EventID }) |
					@Html.ActionLink("Details", "GetEvent", new { id = item.EventID }) |
					@Html.ActionLink("Delete", "DeleteEvent", new { id = item.EventID })
				</td>
			</tr>
		}
	</tbody>
	
</table>
